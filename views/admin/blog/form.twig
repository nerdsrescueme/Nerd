
  <form method="post" class="form-horizontal">
    <fieldset>
	    <div class="control-group">
        <label class="control-label" for="post_title">Title</label>
        <div class="controls">
          <input type="text" name="post[title]" id="post_title" class="input-xlarge" value="{{ post.title }}">
        </div>
      </div>
	    <div class="control-group">
        <label class="control-label" for="post_excerpt">Excerpt</label>
        <div class="controls">
          <div class="textarea">
            <textarea name="post[excerpt]" id="post_excerpt">{{ post.excerpt }}</textarea>
          </div>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="post_data">Content</label>
        <div class="controls">
          <div class="textarea">
            <textarea name="post[data]" id="post_data">{{ post.data }}</textarea>
          </div>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button class="btn btn-default">Save</button>
        </div>
      </div>
    </fieldset>
  </form>
