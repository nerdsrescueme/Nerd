<!DOCTYPE html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>{% block title "Nerd Content Management System" %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ page.description }}">
  <meta name="author" content="Nerds, Rescue Me!">

  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet">
  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-responsive.min.css" rel="stylesheet">
  <link href="/assets/libs/select2/select2.css" rel="stylesheet">
  <style type="text/css">body {padding-top: 60px; padding-bottom: 40px}</style>
  <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js"></script>

  <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]--> 
</head>

<body>

<!-- Start navigation block -->
{% block navigation %}

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="#">Nerd Dashboard</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li><a href="/admin">Home</a></li>
          <li><a href="/admin/blog">Blog</a></li>
          <li><a href="/admin/users">Users</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

{% endblock %}

<div class="container">
  <div class="row">
    <!-- Start content block -->
    {% block content content|raw %}
  </div>
</div>

<!-- Start footer block -->
{% block footer %}

{% endblock %}

<!-- Start scripts block -->
{% block scripts %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/bootstrap.min.js"></script>
<script src="/assets/libs/select2/select2.min.js"></script>
<script type="text/javascript">
$(function() {
  $('[data-ujs-tokenize]').select2({
    width: '95%',
    tags: ["test", "test2", "test3"],
    tokenSeparators: [","]
  })
})

</script>
{% endblock %}

</body>
</html>
